{
  "name": "react-demo",
  "version": "1.0.0",
  "description": "base react project",
  "main": "index.js",
  "scripts": {
    "start": "node       lib/index.js",
    "start:ts": "ts-node lib-ts/index.ts",
    "build": "      rm -rf lib/* && tsc",
    "build:watch": "rm -rf lib/* && tsc --watch",
    "test": "         npm run build && jest --forceExit",
    "test:coverage": "npm run build && jest --forceExit --coverage",
    "test:watch": "   npm run build && jest --forceExit --watch",
    "tslint": "    tslint -c tslint.json       'src/**/*.ts?(x)'",
    "tslint:fix": "tslint -c tslint.json --fix 'src/**/*.ts?(x)'",

    "dev-server": "  webpack-dev-server --config webpack/webpack.dev.js --devtool eval --progress --colors --content-base dev",
    "webpack": "     webpack  --watch   --config webpack/webpack.dev.js",
    "webpack:prod": "webpack            --config webpack/webpack.prod.js"
  },
  "author": "heartblood",
  "license": "ISC",
  "dependencies": {
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "tslib": "^1.7.1"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.66",
    "@types/node": "^8.0.2",
    "@types/react": "^15.0.31",
    "@types/react-dom": "^15.5.1",
    "awesome-typescript-loader": "^3.1.3",
    "babel-plugin-react-css-modules": "^3.0.0",
    "css-loader": "^0.28.4",
    "extract-text-webpack-plugin": "^2.1.2",
    "file-loader": "^0.11.2",
    "gulp": "^3.9.1",
    "less": "^2.7.2",
    "less-loader": "^4.0.4",
    "style-loader": "^0.18.2",
    "tslint": "^5.4.3",
    "typescript": "^2.3.4",
    "url-loader": "^0.5.9",
    "webpack": "^2.6.1",
    "webpack-dev-server": "^2.5.0",
    "webpack-merge": "^4.1.0",
    "webpack-visualizer-plugin": "^0.1.11"
  }
}
